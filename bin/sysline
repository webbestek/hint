#!/usr/bin/env bash
set -euo pipefail
u="$(whoami 2>/dev/null || echo user)"
load="$(cut -d ' ' -f1 < /proc/loadavg 2>/dev/null || echo '?')"
ram="$(free -h 2>/dev/null | awk '/Mem:/ {print $3 "/" $2}')"
disk="$(df -h . 2>/dev/null | awk 'NR==2{print $5}')"
bat=""; for b in /sys/class/power_supply/BAT*/capacity; do [[ -r "$b" ]] && bat="$(cat "$b")%" && break; done
sep="  |  "
out="ğŸ‘¤ ${u}${sep}ğŸ–¥ load ${load}${sep}ğŸ§  RAM ${ram}${sep}ğŸ’½ ${disk}"
[[ -n "$bat" ]] && out="${out}${sep}ğŸ”‹ ${bat}"
out="${out}${sep}âœ§ type hint"
printf "%s\n" "$out"
