
pkgname=hint-starship
pkgver=0.2.0
pkgrel=1
pkgdesc="Starship-powered interactive command palette"
arch=('any')
url="https://github.com/kevin4hrens/hint"
license=('MIT')
depends=('starship')
source=("$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('REPLACE_WITH_REAL_SHA256')
package() {
  cd "$srcdir/hint-$pkgver"
  install -Dm755 bin/hint "$pkgdir/usr/bin/hint"
  install -Dm755 bin/sysline "$pkgdir/usr/bin/sysline"
  mkdir -p "$pkgdir/usr/share/hint"
  cp -r hint starship config scripts "$pkgdir/usr/share/hint/"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
